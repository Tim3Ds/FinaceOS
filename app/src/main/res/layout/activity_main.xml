<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/display_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:background="@color/colorDisplay"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_Expenses_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense:"
            />

        <TextView
            android:id="@+id/tv_total_Expenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="10dp"
            android:text="Default text"
            android:textAlignment="textEnd"
            android:textColor="@color/colorExpense"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_Income_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Income:"
        />
        <TextView
            android:id="@+id/tv_total_Income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:textSize="30sp"
            android:textColor="@color/colorIncome"
            android:text="Default text"
            />

        <TextView
            android:id="@+id/tv_over_short_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O/S:"
            />
        <TextView
            android:id="@+id/tv_over_short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:textSize="30sp"
            android:textColor="@color/colorIncome"
            android:text="Default text"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_goToExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense List"
            />
        <Button
            android:id="@+id/btn_goToIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Income List"
            />

    </LinearLayout>


</RelativeLayout>
