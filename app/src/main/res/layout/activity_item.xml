<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_item_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context="comtim3ds.github.financeos.ItemActivity">
    <TextView
        android:id="@+id/tv_activity_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="default text"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="@color/colorDisplay"
        />

    <include
        layout="@layout/content_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_label"/>

    <Button
        android:id="@+id/dtn_add_item"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:background="@android:drawable/ic_menu_add"

        />

</RelativeLayout>
